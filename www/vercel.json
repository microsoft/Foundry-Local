{
	"buildCommand": "npm run build",
	"devCommand": "npm run dev",
	"framework": "sveltekit",
	"headers": [
		{
			"source": "/(.*)",
			"headers": [
				{
					"key": "X-Content-Type-Options",
					"value": "nosniff"
				},
				{
					"key": "X-Frame-Options",
					"value": "DENY"
				},
				{
					"key": "X-XSS-Protection",
					"value": "1; mode=block"
				},
				{
					"key": "Referrer-Policy",
					"value": "strict-origin-when-cross-origin"
				},
				{
					"key": "Permissions-Policy",
					"value": "camera=(), microphone=(), geolocation=()"
				}
			]
		}
	],
	"redirects": [
		{
			"source": "/docs",
			"destination": "https://learn.microsoft.com/en-us/azure/ai-foundry/foundry-local/get-started",
			"permanent": false
		}
	]
}
